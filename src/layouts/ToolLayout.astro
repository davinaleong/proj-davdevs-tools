---
// ToolLayout.astro
const { title, description } = Astro.props;
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="relative overflow-hidden bg-f">
    <section class="bg-blue-500 p-4 text-black text-center bg-h flow">
      <h1 class="text-3xl font-bold">{title}</h1>
      <p class="text-lg">{description}</p>
    </section>

    <section class="wrapper mx-auto p-4 prose">
      <slot />
    </section>
  </main>
</Layout>
