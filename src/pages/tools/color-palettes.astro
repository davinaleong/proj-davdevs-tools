---
import { getEntry } from 'astro:content'
import ToolLayout from './../../layouts/ToolLayout.astro'
import ColorPalette from '../../components/react/ColorPalette'

const entry = await getEntry('tools', 'color-palettes')

if (!entry) {
  throw new Error('Could not find entry')
}

const { data } = entry;
const { title, description, date } = data
---

<ToolLayout title={title} description={description} date={date}>
  <h2 class="text-3xl font-bold">ðŸŽ¨ Explore Color Palettes</h2>

    <p class="mt-2">
    Quickly browse and copy color swatches for use in your projects. This palette viewer lets you:
    </p>

    <ul class="list-disc list-inside mt-2">
    <li>View common color values like HEX</li>
    <li>Preview contrast with text on each color</li>
    <li>Use them in web, UI, or graphic design work</li>
    </ul>

    <p class="mt-4">
    Perfect for developers, designers, or anyone needing a handy color reference.
    </p>

  <div class="mt-4">
    <ColorPalette client:load />
  </div>
</ToolLayout>
