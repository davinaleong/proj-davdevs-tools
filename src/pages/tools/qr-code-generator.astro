---
import { getEntry } from 'astro:content'
import ToolLayout from './../../layouts/ToolLayout.astro'
import QrCodeGenerator from '../../components/react/QrCodeGenerator'

const entry = await getEntry('tools', 'qr-code-generator')

if (!entry) {
  throw new Error('Could not find entry')
}

const { data } = entry;
const { title, description, date } = data
---

<ToolLayout title={title} description={description} date={date}>
  <h2 class="text-3xl font-bold">ðŸ“± Generate a Custom QR Code</h2>

  <div class="mt-4">
    <QrCodeGenerator client:load />
  </div>

  <p class="mt-2">Quickly create QR codes for URLs, messages, or any text. This tool lets you:</p>

  <ul class="list-disc list-inside mt-2">
    <li>Enter any text or URL to encode</li>
    <li>Set custom dimensions (up to 1000px)</li>
    <li>Choose your foreground and background colors</li>
  </ul>

  <p class="mt-4">Great for printing, sharing, or embedding on your site.</p>
</ToolLayout>
