---
import React from 'react'
import { getEntry } from 'astro:content'
import ToolLayout from './../../layouts/ToolLayout.astro'
import ColorValueConverter from '../../components/react/ColorValueConverter'

const entry = await getEntry('tools', 'color-value-converter')

if (!entry) {
  throw new Error('Could not find entry')
}

const { data } = entry;
const { title, description, date } = data
---

<ToolLayout title={title} description={description} date={date}>
  <h2 class="text-2xl font-bold mb-4">{title}</h2>

  <div class="mt-4">
      <ColorValueConverter client:load />
  </div>

